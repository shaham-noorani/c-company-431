<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :role, style: "display: block" %>
    <%= form.select :role, [['Admin', 'admin'], ['Platoon Leader', 'platoon_leader'], ['Pleb', 'pleb']], {selected: user.role}, {class: "form-control"} %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :platoon_id, style: "display: block" %>
    <%= form.select :platoon_id, Platoon.all.map { |platoon| [platoon.name, platoon.id] }, {selected: user.platoon_id}, {class: "form-control"} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
